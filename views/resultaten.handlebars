<main class="resultaten-pagina">

    {{> filter-header}}

    <h1>{{title}} ({{results}})</h1>

    <section class="profielen">
        {{#each gebruikers}}
        <article class="profiel">
            <header>
                <h2>{{naam}}</h2>
                <div class="school-info">
                    <p>{{schoolNaam}}</p>
                    <p>{{opleidingsniveau}}, leerjaar {{leerjaar}}</p>
                </div>
                <hr>
                {{!-- <p>{{soortGebruiker}}</p> --}}
            </header>
            <article class="gebruiker-main-content">
                <p>{{biografie}}</p>
                <h2>Skills</h2>
                <p>{{kwaliteiten}}</p>
            </article>
            <article>
                <h2>{{naam}} is opzoek naar</h2>
                <p><span>Dienstverband:</span> {{dienstverband}}</span></p>
                <p><span>Functie:</span> {{functie}}</p>
                {{!-- <p><a href="/gebruikersdb/{{gebruikers.id}}">Meer info</a></p> --}}
            </article>
        </article>
        {{/each}}
    </section>

</main>