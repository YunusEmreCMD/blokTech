{{> filter-header}}


<form class="filter-overlay" action="/vacatures" method="POST">
    <section class="maximale-breedte-mobiel">
        <label for="branchFilter">Branch</label>
        <select name="branchFilter" id="branchFilter">
            {{#if branchFilter}}
            <option value={{branchFilter}}>{{branchFilter}}</option>
            {{/if}}
            <option value="Alle">Alle</option>
            <option value="ICT">ICT</option>
            <option value="Design">Design</option>
            <option value="Marketing">Marketing</option>
        </select>

        <label for="dienstverband-filter">Dienstverband</label>
        <select name="dienstverbandFilter" id="dienstverbandFilter">
            {{#if dienstverbandFilter}}
            <option value={{dienstverbandFilter}}>{{dienstverbandFilter}}</option>
            {{/if}}
            <option value="Alle">Alle</option>
            <option value="Fulltime">Fulltime</option>
            <option value="Parttime">Parttime</option>
            <option value="Stage">Stage</option>
            <option value="Freelance">Freelance</option>
            <option value="Vrijwillig">Vrijwillig</option>
        </select>

        <input type="submit">
    </section>
</form>






<h1>{{title}} ({{results}})</h1>

<section class="cards">
    {{#each vacatures}}
    <article class="card-content card-vacature">
        <header>
            <h2>{{vacatureNaam}}</h2>
            <div class="school-info">
                <p>{{bedrijfsnaam}}, {{plaatsnaam}}</p>
                <p>{{branch}}</p>
                <p>{{dienstverband}}</p>
            </div>
            <hr>
            {{!-- <p>{{soortGebruiker}}</p> --}}
        </header>
        <article class="gebruiker-main-content">
            <p>{{vacatureOmschrijving}}</p>
            <h2>Dit ben jij</h2>
            <h3>Je bent</h3>
            <p>{{competenties}} </p>
            <h3>Je kan werken met</h3>
            <p>{{skills}} </p>
            <h3>Je bezit minimaal een</h3>
            <p>{{opleidingsniveau}} werk- denkniveau </p>
        </article>
        <article>
            <h2>Wat wij jou kunnen bieden</h2>
            <p>{{aanbod}}</span></p>
            {{!-- <p><a href="/gebruikersdb/{{gebruikers.id}}">Meer info</a></p> --}}
        </article>
    </article>
    {{/each}}
</section>

</main>